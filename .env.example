# Audio-Only Drama â€” Automated FX Engine
# Environment variables template
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS
# =============================================================================

# ElevenLabs API key for voice synthesis and processing
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenAI API key (if using OpenAI services)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL database URL
# Format: postgresql+psycopg2://username:password@host:port/database
DATABASE_URL=postgresql+psycopg2://app:app@localhost:5432/fx

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis URL for caching and task queue
REDIS_URL=redis://localhost:6379/0

# Redis connection settings
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_KEEPALIVE=true

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Application secret key for JWT tokens and encryption
SECRET_KEY=your_secret_key_here_change_in_production

# Application host and port
HOST=0.0.0.0
PORT=8000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# AUDIO PROCESSING SETTINGS
# =============================================================================

# Maximum file size for uploads (in bytes)
MAX_UPLOAD_SIZE=104857600  # 100MB

# Supported audio formats
SUPPORTED_FORMATS=wav,mp3,flac,m4a,aac,ogg

# Audio processing settings
AUDIO_SAMPLE_RATE=44100
AUDIO_CHANNELS=2
AUDIO_BIT_DEPTH=16

# Temporary directory for processing
TEMP_DIR=./temp

# Output directory for processed files
OUTPUT_DIR=./output

# =============================================================================
# CELERY TASK QUEUE SETTINGS
# =============================================================================

# Celery broker URL (Redis)
CELERY_BROKER_URL=redis://localhost:6379/1

# Celery result backend
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Celery task settings
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log file path
LOG_FILE=./logs/app.log

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT settings
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode
DEBUG=true

# Enable auto-reload
AUTO_RELOAD=true

# Enable CORS for development
CORS_ENABLED=true

# Enable API documentation
ENABLE_DOCS=true
